(function() {
  'use strict';

  // âš™ï¸ ConfiguraÃ§Ãµes
  const CONFIG = {
    delay: 1500, // Tempo entre aÃ§Ãµes (em milissegundos)
    maxAttempts: 100, // NÃºmero mÃ¡ximo de tentativas
  };

  let attempts = 0;
  let clicks = 0;

  // ğŸ•’ Espera
  const wait = ms => new Promise(resolve => setTimeout(resolve, ms));

  // ğŸ” Verifica se o elemento estÃ¡ visÃ­vel
  const isVisible = el => {
    const style = window.getComputedStyle(el);
    return el.offsetWidth > 0 && el.offsetHeight > 0 &&
           style.display !== 'none' &&
           style.visibility !== 'hidden' &&
           style.opacity !== '0';
  };

  // ğŸ¯ Seletores possÃ­veis de botÃµes
  const BUTTON_SELECTORS = [
    'button[data-testid*="continue"]',
    'button[data-testid*="next"]',
    'button[data-testid*="start"]',
    'button[data-testid*="complete"]',
    'button[data-testid*="practice"]',
    'button[class*="continue"]',
    'button[class*="next"]',
    'button[class*="start"]',
    'button[class*="practice"]',
    'button:contains("Continuar")',
    'button:contains("PrÃ³ximo")',
    'button:contains("Next")',
    'button:contains("Iniciar")',
    'button:contains("Start")',
    'button:contains("Praticar")',
    'button:contains("Practice")',
    'div[role="button"]'
  ];

  // ğŸ” Tenta encontrar um botÃ£o clicÃ¡vel
  const findButton = () => {
    for (let sel of BUTTON_SELECTORS) {
      let elements = Array.from(document.querySelectorAll('button, div[role="button"]'))
        .filter(el => isVisible(el) && el.innerText.toLowerCase().match(/continuar|next|prÃ³ximo|start|iniciar|praticar|complete/));
      if (elements.length) return elements[0];
    }
    return null;
  };

  // ğŸš€ FunÃ§Ã£o principal
  async function runAutomation() {
    console.log("ğŸ” Iniciando automaÃ§Ã£o no Speak...");
    while (attempts < CONFIG.maxAttempts) {
      attempts++;
      const button = findButton();

      if (button) {
        console.log(`âœ… [${attempts}] Clicando em: "${button.innerText.trim()}"`);
        button.click();
        clicks++;
        await wait(CONFIG.delay);
      } else {
        console.log(`ğŸ” [${attempts}] Nenhum botÃ£o encontrado, tentando novamente...`);
        await wait(CONFIG.delay * 2);
      }
    }

    console.log("ğŸ AutomaÃ§Ã£o finalizada.");
    console.log(`ğŸ§® Tentativas: ${attempts}`);
    console.log(`âœ… Cliques feitos: ${clicks}`);
  }

  runAutomation();
})();
